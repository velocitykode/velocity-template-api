# App
APP_NAME=Velocity
APP_ENV=development
APP_URL=http://localhost:4000
PORT=4000

# Logging
LOG_DRIVER=console
LOG_LEVEL=info

# Encryption
CRYPTO_KEY=base64:your-generated-key-here
CRYPTO_CIPHER=AES-256-CBC

# Database
DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=database.sqlite
DB_USERNAME=
DB_PASSWORD=

# Cache
CACHE_DRIVER=memory

# Session (for stateful API auth)
SESSION_DRIVER=cookie
SESSION_NAME=velocity_session
SESSION_LIFETIME=120
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Authentication
AUTH_GUARD=api
AUTH_MODEL=User

# Filesystem
FILESYSTEM_DISK=local

# JWT (recommended for API auth)
# JWT_SECRET=
# JWT_TTL=60
# JWT_REFRESH_TTL=20160
# JWT_BLACKLIST_ENABLED=true
